<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <TextView
        android:id="@+id/shimmer_textViewDiscipline"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_shimmer"
        app:layout_constraintBottom_toTopOf="@+id/shimmer_textViewTime"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_textViewMark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shimmer_textViewOffice"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_textViewTime"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_textViewMark"
        app:layout_constraintStart_toEndOf="@+id/shimmer_textViewTime"
        app:layout_constraintTop_toTopOf="@+id/shimmer_textViewTime" />

    <TextView
        android:id="@+id/shimmer_textViewTime"
        android:layout_width="56dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_textViewDiscipline" />

    <TextView
        android:id="@+id/shimmer_textViewMark"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>