<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/bottom_sheet_head_decorate" />

    <TextView
        android:id="@+id/textViewDiscipline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Barsdiary.Large" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:nestedScrollingEnabled="true"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_person_24" />

            <TextView
                android:id="@+id/textViewOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_place_24" />

            <TextView
                android:id="@+id/textViewTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_label_24" />

            <TextView
                android:id="@+id/textViewComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_comment_24" />

            <TextView
                android:id="@+id/textViewHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_home_24" />

            <TextView
                android:id="@+id/textViewMaterials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_link_24" />

            <TextView
                android:id="@+id/textViewMark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_star_24" />

            <TextView
                android:id="@+id/textViewAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/nunito"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textAppearance="@style/TextAppearance.Barsdiary.Medium"
                app:drawableStartCompat="@drawable/ic_round_bookmark_24" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
